<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Szukaj Dłużnika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Pokaż wszystkich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/show_allB"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Wyszukaj "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_oneB"
        android:layout_below="@+id/show_allB"
        android:layout_alignLeft="@+id/show_allB"
        android:layout_alignStart="@+id/show_allB"
        android:layout_alignRight="@+id/show_allB"
        android:layout_alignEnd="@+id/show_allB" />

    <Button
        android:text="Wróć"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backB"
        android:layout_below="@+id/show_oneB"
        android:layout_alignLeft="@+id/show_oneB"
        android:layout_alignStart="@+id/show_oneB"
        android:layout_alignRight="@+id/show_oneB"
        android:layout_alignEnd="@+id/show_oneB" />

</RelativeLayout>